<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (user) { %>
    <h3 class="navbar-brand">TinyApp Username: <%= user.email %></h3>
    <form class="form-inline" action="/logout" method="POST">
      <button type="submit" class="btn btn-primary">Logout</button>
    </form>
    <% } %>
    <% if (!user) { %>
    <form class="form-inline" action="/urls/login" method="POST">
      <label for="username"></label>
      <input class="form-control" type="text" name="username" placeholder="UserName"
        style="width: 200px; margin: lem;" />
      <button type="submit" class="btn btn-primary" style="justify-content: right">Login</button>
    </form>
    <% } %>
  </nav>
</header>